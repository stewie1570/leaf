{
  "name": "leaf-validator",
  "version": "2.1.0",
  "description": "Declarative state progression & validation",
  "keywords": [
    "react",
    "declarative",
    "validation",
    "state management"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": "https://github.com/stewie1570/leaf",
  "author": "Stewart Anderson",
  "license": "GPL-3.0",
  "sideEffects": false,
  "dependencies": {
    "bootstrap": "^4.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^8.1.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "del-cli": "^3.0.0",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "tdd": "react-scripts test",
    "test": "react-scripts test --watchAll=false --colors --coverage --collectCoverageFrom=src/lib**/*.*",
    "eject": "react-scripts eject",
    "build-package": "del-cli ./dist && yarn build-cjs && yarn build-esm",
    "build-cjs": "tsc index.ts -d --jsx react --esModuleInterop --lib \"ES2019\",\"DOM\" --outDir ./dist/cjs",
    "build-esm": "tsc index.ts -d --jsx react --allowSyntheticDefaultImports --moduleResolution \"node\" --module \"esnext\" --lib \"ES2019\",\"DOM\" --outDir ./dist/esm",
    "prepublishOnly": "yarn build-package"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
