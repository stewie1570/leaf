{
  "name": "leaf-validator",
  "version": "1.0.17",
  "description": "Declarative state progression & validation",
  "keywords": [
    "react",
    "declarative",
    "validation",
    "state management"
  ],
  "main": "dist/index.js",
  "repository": "https://github.com/stewie1570/leaf",
  "author": "Stewart Anderson",
  "license": "GPL-3.0",
  "dependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^8.1.0",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "bootstrap": "^4.4.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1"
  },
  "devDependencies": {
    "del-cli": "^3.0.0",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "tdd": "react-scripts test",
    "test": "react-scripts test --watchAll=false --colors --coverage --collectCoverageFrom=src/lib**/*.*",
    "eject": "react-scripts eject",
    "build-package": "del-cli ./dist && tsc index.ts -d --jsx react --esModuleInterop --lib \"ES2019\",\"DOM\" --outDir ./dist",
    "prepublishOnly": "yarn build-package"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
